.row
  .col-md-4
    %h1 Usuários
.row
  %table{ class: "table table-striped" }
    %thead
      %tr
        %td Id
        %td Nome
        %td E-mail
        %td Ações
    %tbody
      - @current_company.users.each do |user|
        %tr
          %td= user.id
          %td= user.name
          %td= user.email
          %td
            = link_to edit_admin_user_path(user), role: "button", class: "btn btn-primary" do
              %i{ class: "glyphicon glyphicon-pencil" }
              Editar
            = link_to admin_user_path(user), method: :delete, data: { confirm: 'Tem certeza?' }, role: "button", class: "btn btn-danger" do
              %i{ class: "glyphicon glyphicon-trash" }
              Excluir