.row
  .col-md-4
    %h1 Minhas Consultorias
.row
  .col-md-4
    %table{ class: "table table-striped" }
      %thead
        %tr
          %td Tipo de Consultoria
          %td Passos
          %td Ações
      %tbody
        - @seeting.consulting_kinds.each do |consulting_kind|
          %tr
            %td= consulting_kind.name
            %td= consulting_kind.consulting_steps.count
            %td
              = link_to edit_admin_seeting_consulting_kind_path(@seeting, consulting_kind), role: "button", class: "btn btn-primary" do
                %i.glyphicon.glyphicon-pencil
                Editar
    = link_to new_admin_seeting_consulting_kind_path(@seeting), role: "button", class: "btn btn-primary" do
      %i.glyphicon.glyphicon-plus
      Adicionar
